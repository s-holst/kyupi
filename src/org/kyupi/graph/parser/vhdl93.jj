{
	( entity_designator() ( "," entity_designator() )*
	| <OTHERS>
	| <ALL>
	)
}

void entity_designator() :
{}
{
	entity_tag() signature()
}

void entity_tag() :
{}
{
	( identifier ()
	| <character_literal>
	| <string_literal>
	)
}

void entity_class() :
{}
